@model PacienteViewModel
@{
    ViewData["Title"] = "Pacientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col">
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Lista de Pacientes</span></h5>
        </div>
    </div>
    <div class="row px-xl-5 mb-1 justify-content-end">
        <div class="col">
            <div class="input-group">
                <input type="text" id="searchText" class="form-control" placeholder="Buscar por Documento">
                <div class="input-group-append">
                    <span id="searchInput" class="input-group-text bg-transparent text-primary">
                        <i class="fa fa-search"></i>
                    </span>
                </div>
            </div>
        </div>
        @if (Model.TipoUsuario != Presentacion.Core.DTOs.TipoUsuarioDto.MEDICO)
        {
            <div class="col-auto">
                <a class="btn btn-primary px-3" asp-area="" asp-controller="Paciente" asp-action="GestionarPaciente"><i class="fa fa-plus"></i> Nuevo</a>
            </div>
        }
    </div>
    <div class="row px-xl-5">
        <div class="col table-responsive mb-5">
            <div id="searchResults">
                <table id="pacienteTable" class="table table-light table-borderless table-hover text-center mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Documento</th>
                            <th>Apellido</th>
                            <th>Nombre</th>
                            <th>Fecha Nacimiento</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">
                        @foreach (var item in Model.Pacientes)
                        {
                            <tr>
                                <td class="align-middle">@item.Documento</td>
                                <td class="align-middle">@item.Apellido</td>
                                <td class="align-middle">@item.Nombre</td>
                                <td class="align-middle">@item.FechaNacimiento?.ToString("dd/MM/yyyy")</td>
                                <td class="align-middle">
                                    <button class="btn btn-sm btn-primary btn-modify-paciente" title="Editar" data-paciente-id="@item.PacienteId"><i class="fas fa-edit"></i></button>
                                    <button class="btn btn-sm btn-danger btn-delete-paciente" title="Eliminar" data-paciente-id="@item.PacienteId" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirmar Eliminación</h5>
                </div>
                <div class="modal-body">
                    ¿Está seguro de que desea eliminar este paciente? Esta acción no se puede deshacer.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <form id="deleteForm" method="post" action="/Paciente/Eliminar">
                        <input type="hidden" name="pacienteId" id="pacienteIdToDelete" />
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        ConfigDataTableGlobal("pacienteTable");

        $("#searchInput").on("click", function () {
            var searchQuery = $("#searchText").val();
            var redirectUrl = "/Paciente/Index/?filtro=" + encodeURIComponent(searchQuery);
            window.location.href = redirectUrl;
        });

        $('.btn-modify-paciente').on('click', function () {
            var pacienteId = $(this).data('paciente-id');
            window.location.href = '/Paciente/GestionarPaciente/?pacienteId=' + pacienteId + '&tipoOperacion=MODIFICAR';
        });

        $(".btn-delete-paciente").on("click", function () {
            var pacienteId = $(this).data("paciente-id");
            $("#pacienteIdToDelete").val(pacienteId);
            $("#deleteModal").modal("show");
        });

        $(".btn-secondary[data-bs-dismiss='modal']").on("click", function() {
            $("#deleteModal").modal("hide");
        });

        @if (Model.RespuestaServidor != null && Model.RespuestaServidor.IsFailure)
        {
            <text>
                showErrorModal(@Html.Raw(Json.Serialize(Model.RespuestaServidor.GetErrorsAsString())));
            </text>        
        }
    });
</script>